#include <cs50.h>
#include <stdio.h>

int main(void){

    int h;
    do{
    //Prompts the user for a Number from the range 1-8
    h = get_int("How tall should the Pyramide be? (1-8): ");
    }
    while (h > 0 && h >= 9);
    
    printf("Okay, here is your Pyramide :-)\n");

    for(int i = 0; i < h; i++)
    {
        for(int j = 0; j < i; j++)
        {
            printf("#");
        }

    printf("#\n");

    }
}